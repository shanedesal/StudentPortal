@model List<StudentPortal.Models.Entities.SubjectSchedule>

<div class="container-fluid px-4">
    <h1 class="mt-4 mb-4">Subject Schedules</h1>

    <div class="row mb-3 align-items-center">
        <div class="col-md-3">
            <a asp-controller="SubjectSchedules" asp-action="Add" class="btn btn-dark">Add Schedule</a>
        </div>
        <div class="col-md-4 ms-auto">
            <form asp-action="List" method="get" class="d-flex">
                <div class="input-group">
                    <input type="text" name="searchString" class="form-control" placeholder="Search by EDP code, subject, section..."
                           value="@ViewData["CurrentFilter"]" />
                    <button type="submit" class="btn btn-dark">Search</button>
                    @if (!string.IsNullOrEmpty((string)ViewData["CurrentFilter"]))
                    {
                        <a asp-action="List" class="btn btn-outline-dark">Clear</a>
                    }
                </div>
            </form>
        </div>
    </div>

    @if (TempData["InfoMessage"] != null)
    {
        <div class="alert alert-info">
            @TempData["InfoMessage"]
        </div>
    }

    <div class="table-responsive">
        <table class="table table-hover">
            <thead class="table-dark">
                <tr>
                    <th>
                        <a class="text-white text-decoration-none" asp-action="List" asp-route-sortOrder="@ViewData["EDPCodeSortParm"]" asp-route-currentFilter="@ViewData["CurrentFilter"]">
                            EDP Code <i class="bi bi-arrow-down-up"></i>
                        </a>
                    </th>
                    <th>
                        <a class="text-white text-decoration-none" asp-action="List" asp-route-sortOrder="@ViewData["SubjectCodeSortParm"]" asp-route-currentFilter="@ViewData["CurrentFilter"]">
                            Subject Code <i class="bi bi-arrow-down-up"></i>
                        </a>
                    </th>
                    <th>Start Time</th>
                    <th>End Time</th>
                    <th>Days</th>
                    <th>Room</th>
                    <th>Max Size</th>
                    <th>Class Size</th>
                    <th>Status</th>
                    <th>Section</th>
                    <th>School Year</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var schedule in Model)
                {
                    <tr>
                        <td>@schedule.EDPCode</td>
                        <td>@schedule.SubjectCode</td>
                        <td>@schedule.StartTime.ToString("hh:mm tt")</td>
                        <td>@schedule.EndTime.ToString("hh:mm tt")</td>
                        <td>@schedule.Days</td>
                        <td>@schedule.Room</td>
                        <td>@schedule.MaxSize</td>
                        <td>@schedule.ClassSize</td>
                        <td>@schedule.Status</td>
                        <td>@schedule.Section</td>
                        <td>@schedule.SchoolYear</td>
                        <td>
                            <a class="btn btn-outline-dark btn-sm" asp-controller="SubjectSchedules" asp-action="Edit" asp-route-id="@schedule.EDPCode">
                                <i class="bi bi-pencil"></i> Edit
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<style>
    .table-responsive {
        margin: 0;
        padding: 0;
        width: 100%;
    }

    .table {
        margin-bottom: 0;
    }

        .table td {
            vertical-align: middle;
            padding: 0.5rem;
        }

        .table th {
            padding: 0.75rem 0.5rem;
        }

    .input-group {
        width: 100%;
    }

    .btn-dark {
        background-color: #212529;
        border-color: #212529;
    }

        .btn-dark:hover {
            background-color: #424649;
            border-color: #373b3e;
        }

    .container-fluid {
        padding-bottom: 2rem;
    }
</style>