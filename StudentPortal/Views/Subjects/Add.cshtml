@model StudentPortal.Models.AddSubjectViewModel

<h1>Add Subject</h1>

<form method="post">
    <div class="mt-3">
        <label class="form-label">Subject Code</label>
        <input type="text" class="form-control" asp-for="SubjectCode" />
    </div>

    <div class="mt-3">
        <label class="form-label">Description</label>
        <input type="text" class="form-control" asp-for="Description" />
    </div>

    <div class="mt-3">
        <label class="form-label">Units</label>
        <input type="text" class="form-control" asp-for="Units" />
    </div>

    <div class="mt-3">
        <label class="form-label">Offering</label>
        <input type="text" class="form-control" asp-for="Offering" />
    </div>

    <div class="mt-3">
        <label class="form-label">Category</label>
        <select class="form-select" id="exampleSelect1" asp-for="Category">
            <option value="LAB">LAB</option>
            <option value="LEC">LEC</option>
        </select>
    </div>

    <div class="mt-3">
        <label class="form-label">Course Code</label>
        <select class="form-select" id="exampleSelect1" asp-for="CourseCode">
            <option value="BSIT">BSIT</option>
            <option value="BSIS">BSIS</option>
        </select>
    </div>

    <div class="mt-3">
        <label class="form-label">Curriculum Year</label>
        <input type="text" class="form-control" asp-for="CurriculumYear" />
    </div>
    
    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Save</button>
    </div>
</form>