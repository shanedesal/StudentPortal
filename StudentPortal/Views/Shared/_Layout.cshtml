<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - StudentPortal</title>

    <!-- CSS files -->
    <link rel="stylesheet" href="~/css/CSSTheme.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/StudentPortal.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg bg-primary" data-bs-theme="dark">
            <div class="container-fluid">
                <!-- Add Brand/Logo -->
                <a class="navbar-brand" id="navBrand" asp-controller="Home" asp-action="Index">StudentPortal</a>

                <!-- Add Hamburger Menu Button -->
                <button class="navbar-toggler" id="navToggler" type="button" data-bs-toggle="collapse"
                        data-bs-target="#navbarColor01" aria-controls="navbarColor01"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarColor01">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["action"].ToString() == "Index" ? "active" : "")"
                               id="navHome" asp-controller="Home" asp-action="Index">
                                Home
                                <span class="visually-hidden">(current)</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["action"].ToString() == "Privacy" ? "active" : "")"
                               id="navPrivacy" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" id="navStudents" asp-controller="Students" asp-action="List">Students</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" id="navSubjectsDropdown" data-bs-toggle="dropdown" href="#"
                               role="button" aria-haspopup="true" aria-expanded="false">Subjects</a>
                            <div class="dropdown-menu" id="subjectsDropdownMenu">
                                <a class="dropdown-item" id="navSubjectsList" asp-controller="Subjects" asp-action="List">List Subjects</a>
                                <a class="dropdown-item" id="navSubjectsAdd" asp-controller="Subjects" asp-action="Add">Add Subjects</a>
                                <a class="dropdown-item" id="navSchedulesList" asp-controller="SubjectSchedules" asp-action="List">List Schedules</a>
                                <a class="dropdown-item" id="navSchedulesAdd" asp-controller="SubjectSchedules" asp-action="Add">Add Schedules</a>
                            </div>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" id="navEnroll" asp-controller="Enrollment" asp-action="Index">Enroll</a>
                        </li>
                    </ul>
                    <ul class="navbar-nav">
                        <partial name="_LoginPartial" />
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - StudentPortal - <a id="footerPrivacy" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <!-- JavaScript files -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
            crossorigin="anonymous"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>